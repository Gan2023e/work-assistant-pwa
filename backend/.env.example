# Supabase 数据库配置（推荐）
DATABASE_URL=postgresql://user:password@host:port/database

# 或者 Render 自动提供的数据库
# DATABASE_URL=postgresql://user:password@render-host:port/database

# 传统数据库配置（本地开发）
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=work_assistant
DB_USER=postgres
DB_PASSWORD=your_password

# MySQL配置（如果使用MySQL）
# DB_DIALECT=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=work_assistant
# DB_USER=root
# DB_PASSWORD=your_password

# 服务配置
NODE_ENV=production
PORT=3001

# CORS配置
FRONTEND_URL=https://work-assistant-pwa.netlify.app

# JWT密钥
JWT_SECRET=your_super_secret_jwt_key_here
